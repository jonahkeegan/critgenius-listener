{
  "name": "critgenius-listener",
  "version": "0.1.0",
  "description": "D&D Audio Capture & Transcription System with Real-time Speaker-to-Character Mapping",
  "type": "module",
  "private": true,
  "workspaces": ["packages/*"],
  "packageManager": "pnpm@8.15.8",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm --parallel --stream run dev",
    "dev:coordinated": "node scripts/dev-orchestration.mjs",
    "dev:coordinated:watch": "node scripts/dev-orchestration.mjs --monitor",
    "build": "pnpm --recursive run build",
    "test": "vitest run --config vitest.workspace.ts",
    "test:docs": "vitest run tests/docs",
    "test:watch": "vitest watch --config vitest.workspace.ts",
    "test:ui": "vitest --config vitest.workspace.ts --ui",
    "test:coverage": "vitest run --config vitest.workspace.ts --coverage --coverage.reportsDirectory=coverage/workspace",
    "test:integration": "pnpm --recursive run test:integration",
    "test:eslint-config": "vitest run tests/eslint/eslint-config.test.ts",
    "test:client": "pnpm --filter @critgenius/client test",
    "test:server": "pnpm --filter @critgenius/server test",
    "test:shared": "pnpm --filter @critgenius/shared test",
    "lint": "pnpm --recursive run lint",
    "lint:fix": "pnpm --recursive run lint:fix",
    "lint:all": "eslint \"packages/**/*.{ts,tsx,js,jsx}\" --max-warnings 0",
    "lint:ci": "node scripts/lint-ci.mjs",
    "lint:client": "pnpm --filter @critgenius/client lint",
    "lint:server": "pnpm --filter @critgenius/server lint",
    "lint:shared": "pnpm --filter @critgenius/shared lint",
    "lint:accessibility": "eslint \"packages/client/src/**/*.tsx\" --max-warnings 0",
    "lint:accessibility:report": "node -e \"require('fs').mkdirSync('reports',{recursive:true})\" && eslint \"packages/client/src/**/*.tsx\" -f junit -o reports/eslint-accessibility-a11y.xml --max-warnings 0",
    "type-check:lint": "pnpm type-check && pnpm lint",
    "lint:staged": "lint-staged",
    "git:safe-sync": "bash scripts/git-safe-sync.sh",
    "format": "pnpm run format:write",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml,css,scss}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml,css,scss}\"",
    "format:packages": "pnpm --recursive --parallel --stream run format",
    "format:staged": "lint-staged",
    "format:client": "pnpm --filter @critgenius/client run format",
    "format:server": "pnpm --filter @critgenius/server run format",
    "format:shared": "pnpm --filter @critgenius/shared run format",
    "format:ci": "pnpm run format:check",
    "clean": "pnpm --recursive run clean && rimraf dist coverage packages/**/dist packages/**/coverage",
    "setup": "pnpm install && pnpm run build",
    "type-check": "pnpm --filter @critgenius/shared run build && pnpm --recursive run type-check",
    "prepare": "husky",
    "precommit:validate": "node scripts/precommit-validate.mjs",
    "precommit:simulate": "node scripts/precommit-simulate.mjs",
    "precommit:benchmark": "node scripts/precommit-benchmark.mjs",
    "validate:filenames": "node scripts/filename-validator.mjs",
    "validate:filenames:fix": "node scripts/filename-validator.mjs --fix",
    "validate:testing": "node scripts/validate-testing-standards.mjs",
    "certs:setup": "node scripts/setup-https-certs.mjs",
    "certs:setup:force": "node scripts/setup-https-certs.mjs --force",
    "certs:check": "node scripts/check-cert-expiration.mjs",
    "generate:proxy-env": "node scripts/generate-proxy-env-example.mjs",
    "generate:proxy-env-example": "node scripts/generate-proxy-env-example.mjs",
    "generate:proxy-docs": "node scripts/generate-proxy-docs.mjs",
    "validate:proxy": "node scripts/validate-proxy-drift.mjs"
  },
  "critgenius": {
    "ecosystem": {
      "component": "listener",
      "role": "audio-processor",
      "version": "0.1.0",
      "integrations": {
        "prompter": "^1.0.0",
        "llm": "^1.0.0",
        "publisher": "^1.0.0"
      },
      "capabilities": ["real-time-transcription", "speaker-diarization", "character-mapping", "session-recording"],
      "apis": {
        "export": "/api/export",
        "transcription": "/api/transcription",
        "speakers": "/api/speakers",
        "integration": "/api/integration"
      }
    },
    "architecture": {
      "pattern": "modular-monolith",
      "deployment": "containerized",
      "realtime": true,
      "privacy-first": true
    }
  },
  "keywords": [
    "critgenius",
    "dnd",
    "dungeons-dragons",
    "transcription",
    "speaker-diarization",
    "tabletop-rpg",
    "audio-processing",
    "real-time",
    "gaming"
  ],
  "author": "CritGenius Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonahkeegan/critgenius-listener.git"
  },
  "bugs": {
    "url": "https://github.com/jonahkeegan/critgenius-listener/issues"
  },
  "homepage": "https://github.com/jonahkeegan/critgenius-listener#readme",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --ignore-pattern tests/eslint/__fixtures__/a11y-invalid.tsx",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": ["prettier --write"],
    "*.{css,scss}": ["prettier --write"]
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.25.9"
    }
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-formatter-junit": "^8.40.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.0",
    "supertest": "^7.1.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.2.4",
    "js-yaml": "^4.1.0"
  }
}
