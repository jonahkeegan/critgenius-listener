{
  "name": "critgenius-listener",
  "version": "0.1.0",
  "description": "D&D Audio Capture & Transcription System with Real-time Speaker-to-Character Mapping",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.8",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm --parallel --stream run dev",
    "build": "pnpm --recursive run build",
    "test": "pnpm --recursive run test",
    "lint": "pnpm --recursive run lint",
    "lint:fix": "pnpm --recursive run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm --recursive run clean && rimraf dist",
    "setup": "pnpm install && pnpm run build",
    "type-check": "pnpm --recursive run type-check"
  },
  "critgenius": {
    "ecosystem": {
      "component": "listener",
      "role": "audio-processor",
      "version": "0.1.0",
      "integrations": {
        "prompter": "^1.0.0",
        "llm": "^1.0.0", 
        "publisher": "^1.0.0"
      },
      "capabilities": [
        "real-time-transcription",
        "speaker-diarization",
        "character-mapping",
        "session-recording"
      ],
      "apis": {
        "export": "/api/export",
        "transcription": "/api/transcription",
        "speakers": "/api/speakers",
        "integration": "/api/integration"
      }
    },
    "architecture": {
      "pattern": "modular-monolith",
      "deployment": "containerized",
      "realtime": true,
      "privacy-first": true
    }
  },
  "keywords": [
    "critgenius",
    "dnd", 
    "dungeons-dragons",
    "transcription",
    "speaker-diarization",
    "tabletop-rpg",
    "audio-processing",
    "real-time",
    "gaming"
  ],
  "author": "CritGenius Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonahkeegan/critgenius-listener.git"
  },
  "bugs": {
    "url": "https://github.com/jonahkeegan/critgenius-listener/issues"
  },
  "homepage": "https://github.com/jonahkeegan/critgenius-listener#readme",
  "devDependencies": {
    "rimraf": "^5.0.0",
    "prettier": "^3.0.0"
  }
}