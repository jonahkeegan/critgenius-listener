#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run linting and formatting checks before commit
echo "ğŸ” Running pre-commit checks..."

# Check code formatting with Prettier
echo "ğŸ“ Checking code formatting..."
pnpm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting check failed. Please run 'pnpm run format' to fix formatting issues."
  exit 1
fi

# Run ESLint checks
echo "ğŸ” Running ESLint..."
pnpm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint check failed. Please fix linting issues before committing."
  exit 1
fi

# Run TypeScript type checking
echo "ğŸ”§ Running TypeScript type checking..."
pnpm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type checking failed. Please fix type errors before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"