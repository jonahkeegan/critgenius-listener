#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run linting and formatting checks before commit
echo "🔍 Running pre-commit checks..."

# Check code formatting with Prettier
echo "📝 Checking code formatting..."
pnpm run format:check
if [ $? -ne 0 ]; then
  echo "❌ Code formatting check failed. Please run 'pnpm run format' to fix formatting issues."
  exit 1
fi

# Run ESLint checks
echo "🔍 Running ESLint..."
pnpm run lint
if [ $? -ne 0 ]; then
  echo "❌ ESLint check failed. Please fix linting issues before committing."
  exit 1
fi

# Run TypeScript type checking
echo "🔧 Running TypeScript type checking..."
pnpm run type-check
if [ $? -ne 0 ]; then
  echo "❌ TypeScript type checking failed. Please fix type errors before committing."
  exit 1
fi

echo "✅ All pre-commit checks passed!"