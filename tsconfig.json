{
  "compilerOptions": {
    // Base TypeScript configuration with strict mode
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    // Strict Mode Configuration
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    // Path Mapping Configuration
    "baseUrl": ".",
    "paths": {
      "@critgenius/shared": ["./packages/shared/src/index.ts"],
      "@critgenius/shared/*": ["./packages/shared/src/*"],
      "@critgenius/test-utils": ["./packages/test-utils/src/index.ts"],
      "@critgenius/test-utils/*": ["./packages/test-utils/src/*"],
      "@client/*": ["./packages/client/src/*"],
      "@server/*": ["./packages/server/src/*"],
      "@shared/*": ["./packages/shared/src/*"],
      "~/*": ["./src/*"]
    },

    // Additional Configuration
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,

    // Declaration Configuration
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Modern JS Features
    "allowJs": false,
    "checkJs": false
  },
  "include": ["packages/*/src/**/*", "packages/*/tests/**/*", "**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "exclude": ["node_modules", "dist", "**/node_modules", "**/dist", "**/build", "**/*.js", "**/*.jsx"],
  "references": [{ "path": "./packages/shared" }, { "path": "./packages/server" }, { "path": "./packages/client" }]
}
