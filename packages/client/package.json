{
  "name": "@critgenius/client",
  "version": "0.1.0",
  "description": "CritGenius Listener React Client - Real-time audio capture interface",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "lint:a11y": "eslint src --ext .tsx --rule 'jsx-a11y/*:error'",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md,css,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md,css,scss}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@critgenius/shared": "workspace:*",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/react-refresh": "^0.14.5",
    "@vitejs/plugin-react": "^4.2.1",
    "react-refresh": "^0.14.0",
    "express": "^4.19.2",
    "socket.io": "^4.8.1",
    "@types/express": "^4.17.21",
    "@types/socket.io": "^3.0.2",
    "supertest": "^7.1.4",
  "typescript": "^5.2.2",
  "vite": "^5.4.20",
  "vitest": "^3.2.4",
  "@playwright/test": "^1.40.0",
  "playwright": "^1.40.0"
  },
  "critgenius": {
    "ecosystem": {
      "component": "listener",
      "submodule": "client",
      "role": "frontend-interface",
      "technologies": ["react", "typescript", "vite", "web-audio-api", "websocket"],
      "architecture": "spa-frontend",
      "realtime": true,
      "privacy": "client-side-processing"
    },
    "features": {
      "audio-capture": true,
      "real-time-display": true,
      "speaker-mapping": true,
      "session-management": true,
      "export-formats": ["json", "txt", "pdf"],
      "integrations": true
    },
    "apis": {
      "consumed": ["/api/transcription/stream", "/api/speakers/identify", "/api/session/create", "/api/export/formats"]
    },
    "ui": {
      "components": ["audio-visualizer", "transcript-display", "speaker-legend", "control-panel"],
      "responsive": true,
      "accessibility": true
    }
  },
  "keywords": ["critgenius", "audio-transcription", "react", "real-time", "accessibility", "speaker-detection"],
  "author": "CritGenius Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/critgenius/listener.git",
    "directory": "packages/client"
  },
  "bugs": {
    "url": "https://github.com/critgenius/listener/issues"
  },
  "homepage": "https://github.com/critgenius/listener/tree/main/packages/client#readme"
}
