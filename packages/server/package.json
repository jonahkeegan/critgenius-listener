{
  "name": "@critgenius/server",
  "version": "0.1.0",
  "description": "CritGenius Listener Express Server - Audio processing and API backend",
  "type": "module",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run --reporter=verbose",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist .turbo node_modules/.cache"
  },
  "dependencies": {
    "express": "catalog:",
    "cors": "catalog:",
    "multer": "catalog:",
    "@critgenius/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/express": "catalog:",
    "@types/cors": "catalog:",
    "@types/multer": "catalog:",
    "@types/node": "^22.10.0",
    "nodemon": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "rimraf": "catalog:"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}