{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@test-utils/*": ["./src/*"],
      "@test-utils/helpers": ["./src/helpers/index.ts"],
      "@test-utils/factories": ["./src/factories/index.ts"],
      "@test-utils/fixtures": ["./src/fixtures/index.ts"],
      "@test-utils/patterns": ["./src/patterns/index.ts"],
      "@test-utils/matchers": ["./src/matchers/index.ts"],
      "@test-utils/runtime": ["./src/runtime/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
