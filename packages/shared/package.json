{
  "name": "@critgenius/shared",
  "version": "0.1.0",
  "description": "CritGenius Listener Shared - Common types, utilities, and constants",
  "type": "module",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./config/proxyRegistry": {
      "import": "./dist/config/proxyRegistry.js",
      "types": "./dist/config/proxyRegistry.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./constants": {
      "import": "./dist/constants/index.js",
      "types": "./dist/constants/index.d.ts"
    }
  },
  "files": ["dist/**/*", "package.json", "README.md"],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:unit": "vitest run --reporter=verbose",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "eslint \"src/**/!(*.test).{ts,tsx}\" --max-warnings 0",
    "lint:fix": "eslint \"src/**/!(*.test).{ts,tsx}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md,yml,yaml,css,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md,yml,yaml,css,scss}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist .turbo node_modules/.cache"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "assemblyai": "^4.14.2",
    "zod": "^4.0.17",
    "dotenv": "^16.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "critgenius": {
    "ecosystem": {
      "component": "listener",
      "submodule": "shared",
      "role": "type-definitions",
      "technologies": ["typescript"],
      "architecture": "shared-library",
      "realtime": false,
      "privacy": "type-safe"
    },
    "features": {
      "type-definitions": true,
      "utility-functions": true,
      "constants": true,
      "validation-schemas": true,
      "error-types": true,
      "event-types": true
    },
    "exports": {
      "types": {
        "audio": "./types/audio.ts",
        "transcription": "./types/transcription.ts",
        "speaker": "./types/speaker.ts",
        "session": "./types/session.ts",
        "export": "./types/export.ts",
        "integration": "./types/integration.ts",
        "api": "./types/api.ts",
        "events": "./types/events.ts"
      },
      "interfaces": {
        "services": "./interfaces/services.ts",
        "repositories": "./interfaces/repositories.ts",
        "handlers": "./interfaces/handlers.ts",
        "middleware": "./interfaces/middleware.ts"
      },
      "utils": {
        "validation": "./utils/validation.ts",
        "formatting": "./utils/formatting.ts",
        "time": "./utils/time.ts",
        "audio": "./utils/audio.ts"
      },
      "constants": {
        "api": "./constants/api.ts",
        "audio": "./constants/audio.ts",
        "export": "./constants/export.ts",
        "errors": "./constants/errors.ts"
      }
    },
    "consumers": ["@critgenius/listener-client", "@critgenius/listener-server"]
  },
  "keywords": ["critgenius", "typescript", "types", "shared", "audio-transcription", "type-definitions"],
  "author": "CritGenius Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/critgenius/listener.git",
    "directory": "packages/shared"
  },
  "bugs": {
    "url": "https://github.com/critgenius/listener/issues"
  },
  "homepage": "https://github.com/critgenius/listener/tree/main/packages/shared#readme"
}
