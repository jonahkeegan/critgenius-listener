# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.md]
# Preserve Markdown line break spaces
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.{css,scss}]
indent_size = 2

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab

[{package-lock.json,pnpm-lock.yaml}]
# Keep lockfile formatting untouched by enforcing current newline behavior
insert_final_newline = false
