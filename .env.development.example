# ===========================================
# CritGenius Listener - Development Environment Configuration
# ===========================================
# Copy this file to .env for local development
# This configuration is optimized for development workflow

# Node.js Environment
NODE_ENV=development
PORT=3100
CLIENT_PORT=3101
HOST=localhost

# AssemblyAI Configuration
# Get your API key from: https://www.assemblyai.com/
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here
ASSEMBLYAI_WEBHOOK_URL=http://localhost:3100/api/webhooks/assemblyai

# Database Configuration (Local Development)
MONGODB_URI=mongodb://localhost:27017/critgenius-listener
MONGODB_DB_NAME=critgenius-listener
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# CritGenius Ecosystem URLs (Local Development)
CRITGENIUS_ECOSYSTEM_BASE_URL=http://localhost:3000
CRITGENIUS_PROMPTER_URL=http://localhost:3001
CRITGENIUS_LLM_URL=http://localhost:3002
CRITGENIUS_PUBLISHER_URL=http://localhost:3003
CRITGENIUS_ECOSYSTEM_API_KEY=dev_ecosystem_key
CRITGENIUS_SERVICE_TOKEN=dev_service_token

# Security Configuration (Development - Relaxed)
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d
CORS_ORIGINS=http://localhost:3101,http://localhost:3000,http://localhost:5173
CSP_ENABLED=false
HELMET_ENABLED=false
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Audio Processing Configuration
MAX_AUDIO_FILE_SIZE=52428800
MAX_AUDIO_DURATION=3600
SUPPORTED_AUDIO_FORMATS=wav,mp3,m4a,flac,ogg

# Session Configuration
SESSION_TIMEOUT=120
MAX_CONCURRENT_SESSIONS=50

# Export Configuration
EXPORT_TEMP_DIR=./temp-exports
EXPORT_MAX_SIZE=104857600

# Data Retention Configuration
AUTO_CLEANUP_ENABLED=false
CLEANUP_INTERVAL_HOURS=24
DEFAULT_RETENTION_DAYS=7

# Privacy Configuration (Relaxed for Development)
GDPR_ENABLED=false
DATA_ANONYMIZATION_ENABLED=false
CONSENT_REQUIRED=false

# Logging Configuration (Verbose for Development)
LOG_LEVEL=debug
LOG_FORMAT=simple
LOG_FILE_PATH=./logs/app.log

# Performance Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Development Configuration (Enabled)
DEBUG=critgenius:*
DEBUG_SQL=true
DEBUG_REDIS=true
HOT_RELOAD=true
WATCH_FILES=true

# Local HTTPS (Optional - enables secure context for mic access in some browsers)
HTTPS_ENABLED=false
HTTPS_CERT_PATH=./certificates/dev/dev-cert.pem
HTTPS_KEY_PATH=./certificates/dev/dev-key.pem
HTTPS_PORT=5174

# Testing Configuration
TEST_MONGODB_URI=mongodb://localhost:27017/critgenius-listener-test
TEST_REDIS_URL=redis://localhost:6379/1
MOCK_ASSEMBLYAI=false
MOCK_ECOSYSTEM_SERVICES=false

# Production Configuration (Disabled)
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=
CSP_REPORT_URI=/api/csp-report

# ===========================================
# Development Environment Notes
# ===========================================
# This configuration is optimized for:
# - Fast development cycles with hot reload
# - Verbose logging for debugging
# - Relaxed security for ease of development
# - Local service dependencies
# - Extended session timeouts for development convenience
# - Disabled privacy features for testing ease

# Quick Setup:
# 1. Copy this file to .env
# 2. Set your ASSEMBLYAI_API_KEY
# 3. Start MongoDB and Redis locally
# 4. Run: npm run dev

# Security Notice:
# This configuration is NOT suitable for production!
# Security features are intentionally disabled for development ease.
